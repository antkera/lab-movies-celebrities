<h2>Movie Details</h2>

<div>
  <ul>
    <h3>{{this.title}}</h3>
    <p> <b>Genre:</b> {{this.genre}}
    <br>
     <b>Plot:</b> {{this.plot}}
     <br>
    {{#each this.cast}}
     <b>Cast:</b> {{this.name}}</p>      
      <li><b> Ocupation:</b> {{this.occupation}}</li>
      <li><b>Catch Phrase:</b> {{this.catchPhrase}}</li>
      
    {{/each}}
  </ul>
  <form action="/movies/{{this._id}}/edit" method="get">
  <button type="submit" class="btn btn-warning">Edit</button>
  </form>
  <form action="/movies/{{this._id}}/delete" method="post">
  <button type="submit" class="btn btn-danger">Delete</button>
  </form>
</div>